<%= link_to 'Back', :back %>

<%= render "user", user: @user %>
<%= render "bio" %>
<br>

<% @posts.each do |post| %>
  <%= link_to user_post_path(@user.id, post.id) do %>
    <%= render partial: 'posts/post', object: post %>
  <% end %>
<% end %>

<%= link_to "See all posts", user_posts_path(@user.id), class: "btn btn-primary my-5" %>

